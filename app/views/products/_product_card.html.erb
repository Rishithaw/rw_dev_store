<div class="product-card">
  <%= link_to product_path(product), class: "product-link" do %>

    <% if product.images.attached? %>
      <%= image_tag product.images.first.variant(resize_to_limit: [300, 300]), class: "product-image" %>
    <% else %>
      <div class="no-image">No Image</div>
    <% end %>

    <h3><%= product.name %></h3>
    <p class="price">$<%= product.base_price %></p>

  <% end %>
</div>
